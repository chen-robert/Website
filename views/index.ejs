<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Robert Chen</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Cutive+Mono|Montserrat&display=swap">
    <link rel="stylesheet" href="/styles/main.css">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, minimum-scale=1.0">
    
    <meta property="og:locale" content="en_US">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Robert Chen - Portfolio">
    <meta property="og:title" content="Robert Chen - Portfolio">
    <meta property="og:description" content="My online portfolio">
    <meta property="og:url" content="https://robertchen.cc/">
    
    <meta http-equiv="Content-Security-Policy" content="default-src 'none'; font-src data: fonts.gstatic.com; style-src fonts.googleapis.com 'self'; script-src code.jquery.com 'self'">
  </head>
  <body>
    <nav class="navbar">
      <a class="navbar--link" href="mailto:robertchen@live.com">
        Email
      </a>
      <a class="navbar--link" href="https://github.com/chen-robert" target="_blank">
        Github
      </a>
      <a class="navbar--link navbar--link__hide-mobile" href="https://blog.robertchen.cc" target="_blank">
        Blog
      </a>
    </nav>
    <header class="header animate-listener">
      <div class="title">
        <div class="title--container">
          <h1 class="title--text">
            Robert Chen
          </h1>
          <div class="title--bar"></div>
        </div>
        <div class="title--container">
          <h1 class="title--text title--text__secondary">Interlake High School</h1>
          <div class="title--bar title--bar__secondary"></div>
        </div>
        <div class="title--container">
          <h1 class="title--text title--text__secondary">Class of 2021</h1>
          <div class="title--bar title--bar__secondary"></div>
        </div>
      </div>
    </header>
    
    <% if(show) { %>
    <div class="indicator"></div>
    <main class="main">
      <% panels.forEach((panel, i) => { %>
      <section class="main--section">
        <div class="panel <%= i === 0? "clicked": "" %>">
          <div class="panel--header">
            <%= panel.title %>
          </div>
          <div class="panel--body">
            <%- include(panel.file) %>
          </div>
        </div>
      </section>
      <% }) %>
    </main>
    <% } %>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="/scripts/main.js"></script>
  </body>
</html>
